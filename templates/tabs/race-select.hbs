<section>
    <h1 class="center">Select your Race</h1>
    <nav class="race-tabs tabs" data-group="race">
    {{#each races as |race|}}
        {{#ifCond (eq race.playable true) '&&' (eq race.bloodline 'None')}}
            <a data-tab="{{@key}}">{{race.label}}</a>
        {{/ifCond}}
    {{/each}}
    </nav>
    <h2></h2>
    <section class="race-body">
    {{#each races as |race|}}
        {{#if (eq race.playable true)}}
        <div class="tab {{@key}}" data-group="race" data-tab="{{@key}}">
            {{#if race.allow_variants}}
                <h2 class="center">{{race.label}}</h2>
                {{#each race.descriptions.main as |line|}}
                    <p class="center">{{line}}</p>
                {{/each}}
            <h2></h2>
            <h2 class="center">Variants</h2>
            <nav class="{{@key}}-tabs tabs" data-group="{{@key}}-variants">
                {{#each races as |variant|}}
                    {{log variant.bloodline @../key}}
                    {{#if (eq variant.bloodline @../key)}}
                        <a data-tab="{{@key}}">{{variant.label}}</a>
                    {{/if}}
                {{/each}}
            </nav>
            <h2></h2>
            <section class="{{@key}}-body">
                {{#each races as |variant|}}
                    {{#if (eq variant.bloodline @../key)}}
                        <div class="tab {{@key}}" data-group="{{@../key}}-variants" data-tab="{{@key}}">
                            {{> "systems/dc/templates/shared/race-display.hbs" stats=../../stats race=variant}}
                        </div>
                    {{/if}}
                {{/each}}
            </section>
            {{else}}
                {{> "systems/dc/templates/shared/race-display.hbs" stats=../stats race=race}}
            {{/if}}
        </div>
        {{/if}}
    {{/each}}
    </section>
</section>