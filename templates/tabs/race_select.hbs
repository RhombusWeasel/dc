<section>
    {{log this}}
    <nav class="race-tabs tabs" data-group="race">
    {{#each races as |race|}}
        {{#if (eq race.playable true)}}
        <a data-tab="{{@key}}">{{race.label}}</a>
        {{/if}}
    {{/each}}
    </nav>
    <section class="race-body scroller border">
    {{#each races as |race|}}
        {{#if (eq race.playable true)}}
        <div class="tab core" data-group="race" data-tab="{{@key}}">
            <h2 class="center">{{race.label}}</h2>
        {{#each race.descriptions.main as |line|}}
            <p class="center">{{line}}</p>
        {{/each}}
            <h1 class="center">Stats</h1>
            <table>
        {{#each ../stats as |stat|}}
            <tr>
                <th class="center">{{stat.label}}</th>
                <td>
                    {{{get_pips stat.key @../key stat.value stat.max}}}
                </td>
            </tr>
        {{/each}}
            </table>
        </div>
        {{/if}}
    {{/each}}
    </section>
</section>