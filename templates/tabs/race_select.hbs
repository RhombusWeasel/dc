<section>
    <nav class="race-tabs tabs" data-group="race">
    {{#each races as |race|}}
        {{#if (eq race.playable true)}}
        <a data-tab="{{@key}}">{{race.label}}</a>
        {{/if}}
    {{/each}}
    </nav>
    <section class="race-body scroller border">
    {{#each races as |race|}}
        {{#if (eq race.playable true)}}
        <div class="tab {{@key}}" data-group="race" data-tab="{{@key}}"></div>
            {{#if race.sub_classes}}
                <nav class="{{@key}}-variants">
                {{#each race.variants as |variant|}}
                    <a data-tab="{{@key}}">{{variant.label}}</a>
                {{/each}}
                </nav>
                <section>
                {{#each race.variants as |variant|}}
                    <div class="tab {{@key}}" data-group="{{@key}}-variant" data-tab="{{@key}}">
                        {{> "systems/dc/templates/shared/race-display.hbs" stats=../stats race=variant key=@key}}
                    </div>
                {{/each}}
                </section>
            {{else}}
                {{> "systems/dc/templates/shared/race-display.hbs" stats=../stats race=race key=@key}}
            {{/if}}
        </div>
        {{/if}}
    {{/each}}
    </section>
</section>